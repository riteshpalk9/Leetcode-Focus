{
  "manifest_version": 3,
  "name": "LeetCode Focus",
  "version": "1.0",
  "description": "Saving you from Ques Difficulty trap. Does Two Jobs: 1)Remove Difficulty status. 2)Remove Solved status.",
  "permissions": ["storage"],
  "host_permissions": ["https://leetcode.com/problems/*"],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
